<%- include ('header') %>
<nav>
    <div class="logo-name">
        <div class="logo-image">
            <img src="/images/logo.png" alt="">
        </div>

        <span class="logo_name">Zapnode</span>
    </div>

    <div class="menu-items">
        <ul class="nav-links">
            <li><a href="#">
                    <i class="uil uil-estate"></i>
                    <span class="link-name">Dahsboard</span>
                </a></li>
            <li><a href="#">
                    <i class="uil uil-files-landscapes"></i>
                    <span class="link-name">Content</span>
                </a></li>
            <li><a href="#">
                    <i class="uil uil-chart"></i>
                    <span class="link-name">Analytics</span>
                </a></li>
            <li><a href="#">
                    <i class="uil uil-thumbs-up"></i>
                    <span class="link-name">Like</span>
                </a></li>
            <li><a href="#">
                    <i class="uil uil-comments"></i>
                    <span class="link-name">Comment</span>
                </a></li>
            <li><a href="#">
                    <i class="uil uil-share"></i>
                    <span class="link-name">Share</span>
                </a></li>
        </ul>

        <ul class="logout-mode">
            <li><a href="#">
                    <i class="uil uil-signout"></i>
                    <span class="link-name">Logout</span>
                </a></li>

            <li class="mode">
                <a href="#">
                    <i class="uil uil-moon"></i>
                    <span class="link-name">Dark Mode</span>
                </a>

                <div class="mode-toggle">
                    <span class="switch"></span>
                </div>
            </li>
        </ul>
    </div>
</nav>

<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>

        <div class="search-box">
            <i class="uil uil-search"></i>
            <input type="text" placeholder="Search here...">
        </div>

        <div class="user-details">
            <div class="username d-none d-md-block">
                Hello User
            </div>
            <img src="/images/profile.jpg" alt="">
        </div>

    </div>
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <span class="text">Trending Movies</span>
        </div>

        <div class="activity-data">
            <section class="ftco-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="featured-carousel owl-carousel">
                                <% for(var element= (movie.length-1); element>=0; element--){ %>
                                <div class="item">
                                    <div class="work">
                                        <div class="img d-flex align-items-end justify-content-center"
                                            style="background-image: url('<%= movie[element].posterImage %>');">
                                            <div class="text w-100">
                                                <!-- <span class="cat">Web Design</span> -->
                                                <h3><a href="#"><%= movie[element].name %></a></h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>           
        </div>

        <div class="title"> 
            <span class="text">Featured</span>
        </div>

        <div class="activity-data">
            <div class="video-block section-padding">
                <div class="row">
                    <% movie.forEach(element => { %>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="video-card-image">
                            <!-- const formattedUrl = element.name.toLowerCase().split(' ').join('%20'); -->
                            <a href="/featured/<%= element.name %>">
                                <img class="img-fluid" src=" <%= element.posterImage %>" alt="">
                            </a>
                            <div class="time">3:50</div>
                        </div>
                        <div class="video-card-body">
                            <div class="video-title">
                                <a href="#"><%= element.name %></a>
                            </div>
                            <div class="video-page">
                                <%= element.description.substring(0, 100) + '...' %> <br>
                                <a href="/featured/<%= element.name %>">Watch Now</a>
                                <a title="" data-placement="top" data-toggle="tooltip" href="#"
                                    data-original-title="Verified"><i class="fas fa-check-circle text-success"></i></a>
                            </div>
                            <div class="video-view">
                                1.8M views &nbsp;<i class="fas fa-calendar-alt"></i> 11 Months ago
                            </div>
                        </div>
                    </div>
                    <% }) %>


                </div>
            </div>


        </div>
        </section>
        <%- include('footer') %>