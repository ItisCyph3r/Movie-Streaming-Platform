                        <a href="/auth/google">
                            <i class="fa-brands fa-google fa-2x me-3"></i>
                        </a>
                        
                        <a href="/auth/facebook">
                            <i class="fa-brands fa-facebook-square fa-2x"></i>
                        </a>

                        <a href="/auth/instagram">
                            <i class="fa-brands fa-instagram fa-2x ms-3"></i>
                        </a>
                        
                    </div> -->
                    
                    
                
            </div>
            <!-- <div class="col-lg col-md p-5 d-none d-lg-block login-img">
            
        </div> -->
        </div>
    </div>
