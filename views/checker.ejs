<%- include('header') %>
<div class="userAuth">
    <div class="row" style="height: 100vh">
        <div class="login-form">
            <div class="login100-form validate-form">
                <a href="/">
                    <img src="/images/PhonePe_Images_zjha50 (2).png" style="height: 70px; width: 80px;"
                        class="login-logo">
                </a>
                <span class="login100-form-title">
                    OTP Verification
                </span> 
                <div class="my-3 text-center px-5">
                    Add your email address. We'll send you an OTP so we know you're realðŸ˜š
                </div>
                
                <form class="" action="/verify" method="post">
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="username" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <span style="color: red; font-size: 0.75rem;">
                        <%- error %>
                    </span>
                    <div class="container-login100-form-btn mt-4">
                        <button class="login100-form-btn">
                            Send OTP
                        </button>
                    </div>
                    <div class="mt-5 text-center">
                        Dont have an account? <span style="color: #252158;"><a href="/signup">Sign up</a></span>
                    </div>
                    
                </form>
                
            </div>
        </div>
        
    </div>
    <%- include('footer') %>